!!!
.container
  %div.col-sm-9.col-md-10.main
    .row
      .col-xs-12.col-sm-12
        %h1.page-header
          #{@product}
    .row
      .col-xs-12.col-sm-12
        %h5 Bug Trends
        #bug_trend
    .row
      %hr
      %br
    .row
      .col-xs-12.col-sm-6
        %h5 Bug Priorities
        #bug_prio
      .col-xs-12.col-sm-6
        %h5 Top 5 Components
        #top_components
    .row
      %hr
      %br
    .row.no-hide
      .col-xs-12.col-sm-12
        %h5 L3 List
        %ul{:id => "l3list"}
          - @allopenl3bugs.each do |l3|
            %li
              %a{:href => "#{l3.url}", :target => "_blank", :creation_time => "#{Time.parse(l3.creation_time.to_s).to_i}", :last_change_time => "#{Time.parse(l3.last_change_time.to_s).to_i}"} #{l3.bug_id} -- #{l3.summary}
      %hr
      .col-xs-12.col-sm-12
        %h5 Bug List
      .col-xs-12.col-sm-12
        %ul{:id => "buglist"}
          - @allopenbugs.each do |ob|
            %li
              %a{:href => "#{ob.url}", :target => "_blank", :creation_time => "#{Time.parse(ob.creation_time.to_s).to_i}", :last_change_time => "#{Time.parse(ob.last_change_time.to_s).to_i}"} #{ob.bug_id} -- #{ob.summary}

!= js :jquery
!= js :jqueryplugin
!= js :bootstrap
!= js :morris
!= js :customjs

:javascript
  $(document).ready(function(){
    bugzilla('#{@product}',#{@bugtrend},#{@bugprio},#{@top5_components});
    $('#searchfilter').quickfilter('#buglist li');
    $('#searchfilter').quickfilter('#l3list li');
  });
